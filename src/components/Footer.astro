---
import LinkedInIcon from "@assets/svg/linkedin.svg";
import GithubIcon from "@assets/svg/github.svg";
import CodepenIcon from "@assets/svg/codepen.svg";
import MailIcon from "@assets/svg/send-mail.svg";

import { Image } from "astro:assets";
import flowersImage from "@assets/images/flowers.png";

const currentYear = new Date(Date.now()).getFullYear();
const iconWidth = 30;
const iconHeight = 30;
---

<footer>
  <span class="reidfuhrman">
    REID FUHRMAN {currentYear} ðŸŒ¼
  </span>
  <a class="email" href="mailto:hey@reidfuhrman.com" target="_blank"
    >HEY@REIDFUHRMAN.COM
  </a>
  <div class="contact">
    <a class="email" href="mailto:hey@reidfuhrman.com" target="_blank"
      ><MailIcon height={iconHeight} width={iconWidth} aria-hidden />
    </a>
    <a
      href="https://www.linkedin.com/in/reid-fuhrman/"
      target="_blank"
      aria-label="linkedin"
    >
      <LinkedInIcon height={iconHeight} width={iconWidth} aria-hidden />
    </a>
    <a
      href="https://github.com/rjfuhrman42"
      target="_blank"
      aria-label="github"
    >
      <GithubIcon height={iconHeight} width={iconWidth} aria-hidden />
    </a>
    <a href="https://codepen.io/reidjf" target="_blank" aria-label="codepen">
      <CodepenIcon height={iconHeight} width={iconWidth} aria-hidden />
    </a>
    <Image
      class="flowers"
      src={flowersImage}
      alt="Three different flowers in a row"
    />
  </div>

  <style>
    footer {
      position: relative;
      display: flex;
      flex-direction: column-reverse;
      justify-content: flex-end;
      padding: var(--site-padding);
      margin-top: auto;
      font-family: "Fragment Mono", monospace;
      font-size: var(--step--1);
      gap: 0.5em;
    }

    .contact {
      display: flex;
      align-items: center;
      gap: 1rem;
      padding-bottom: 0.5em;
    }

    .reidfuhrman {
      position: relative;
      display: flex;
    }

    .flowers {
      position: absolute;
      bottom: 0;
      right: 0;
      width: clamp(150px, 45vw, 600px);
    }

    .blueflower {
      display: inline;
      object-fit: contain;
    }

    .email {
      display: flex;
      align-items: center;
      gap: 5px;
    }
  </style>
</footer>
