---
import ThemeButton from "./ThemeButton.astro";

import ArrowUpRightIcon from "@assets/svg/arrow-right.svg";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<header class="navbar">
  <nav>
    <a href="/" class={`${currentPath === "" ? "active" : ""}`}>Home</a>
    <a
      href="/projects/"
      class={`${currentPath === "projects/" ? "active" : ""}`}>Projects</a
    >
    <a href="/about/" class={`${currentPath === "about/" ? "active" : ""}`}
      >About Me</a
    >
    <a
      href="/posts/"
      class={`${currentPath.includes("posts/") ? "active" : ""}`}>Blog</a
    >
    <a href="/sound-archive/">sounds</a>
    <a class="resume" href="/Reid_Fuhrman_resume.pdf" target="_blank"
      >Resume{" "}<ArrowUpRightIcon class="arrow" height={15} /></a
    >

    <div class="theme-button">
      <ThemeButton />
    </div>
  </nav>
</header>

<style>
  .navbar {
    overflow-x: scroll;
    overflow-y: hidden;
    scrollbar-width: none;
  }

  nav {
    display: flex;
    position: relative;
    justify-content: flex-start;
    list-style-type: none;
    gap: 0.75em;
    margin-block-start: 0;
    margin-block-end: 0;
    padding: var(--site-padding);
  }

  nav > a {
    display: flex;
    align-items: center;
    font-family: var(--mono-font);
    text-transform: uppercase;
    border-radius: 0.175rem;
    padding: 0.25em 0.75em;
    font-weight: bold;
    white-space: nowrap;
  }

  nav > a:hover {
    background-color: var(--deep-blue);
    color: var(--nice-beige);
    text-decoration: none;
  }

  nav > a:hover svg {
    color: var(--nice-beige);
    stroke: var(--nice-beige);
  }

  :global(.dark) nav > a:hover svg {
    color: var(--deep-blue);
    stroke: var(--deep-blue);
  }

  :global(.dark) nav > a:hover {
    background-color: var(--nice-beige);
    color: var(--deep-blue);
    text-decoration: none;
  }

  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }

  .active {
    background-color: var(--deep-blue);
    color: var(--nice-beige);
  }

  :global(.dark) .active {
    background-color: var(--nice-beige) !important;
    color: var(--deep-blue) !important;
  }

  .theme-button {
    margin-left: auto;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .link-card:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }

  .resume {
    display: flex;
    align-items: center;
    gap: 0.5em;
  }

  nav svg {
    stroke: var(--bg-color-dark);
    min-width: 25px;
  }

  :global(.dark) nav svg {
    stroke: var(--bg-color-light);
  }
</style>
