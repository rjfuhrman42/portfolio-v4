---
import ThemeButton from "./ThemeButton.astro";

import ArrowUpRightIcon from "@assets/svg/arrow-up-right-circle.svg";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---
<header class="navbar">
  <nav>
    <a href="/" class={`${currentPath === "" ? "active" : ""}`}>Home</a>
    <a href="/projects" class={`${currentPath === "projects" ? "active" : ""}`}
      >Projects</a
    >
    <a href="/" class={`${currentPath === "about" ? "active" : ""}`}>About Me</a>
    <a href="/" class={`${currentPath === "blog" ? "active" : ""}`}>Blog</a>
    <a href="/" class={`${currentPath === "resume" ? "active" : ""}`}
      >Resume{" "}-></a
    >
    <div
      style={{
        right: 0,
        position: "absolute",
      }}
    >
      <ThemeButton />
    </div>
    </nav>
</header>

  <style>
    .navbar { 
      overflow-x: scroll;
    }

    nav {
      display: flex;
      position: relative;
      justify-content: flex-start;
      list-style-type: none;
      gap: 0.75em;
      margin-block-start: 0;
      margin-block-end: 0;
    }

    nav > a {
      display: flex;
      align-items: center;
      font-family: "Fragment Mono", monospace;
      text-transform: uppercase;
      border-radius: 0.175rem;
      padding: 0.25em 0.75em;
      font-weight: bold;
      white-space: nowrap;
    }

    nav > a:hover {
      background-color: var(--deep-blue);
      color: var(--nice-beige);
      text-decoration: none;
    }

    :global(.dark) nav > a:hover {
      background-color: var(--nice-beige);
      color: var(--deep-blue);
      text-decoration: none;
    }

    h2 {
      margin: 0;
      font-size: 1.25rem;
      transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }

    p {
      margin-top: 0.5rem;
      margin-bottom: 0;
    }

    .active {
      background-color: var(--deep-blue);
      color: var(--nice-beige);
    }

    :global(.dark) .active {
      background-color: var(--nice-beige) !important;
      color: var(--deep-blue) !important;
    }

    .themebutton {
      position: absolute;
      right: 0;

      background-color: transparent;
      border: none;
    }

    .link-card:is(:hover, :focus-within) {
      background-position: 0;
      background-image: var(--accent-gradient);
    }
    .link-card:is(:hover, :focus-within) h2 {
      color: rgb(var(--accent-light));
    }
  </style>
</nav>
