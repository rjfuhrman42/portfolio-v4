---
import Layout from "@layouts/Layout.astro";
import "@fontsource-variable/epilogue";
import "@fontsource/fragment-mono";
import { Image } from "astro:assets";
import latteArt from "@assets/images/latte-art.webp";
import dayjs from "dayjs";
import localized from "dayjs/plugin/localizedFormat";

const posts = await Astro.glob("./posts/*{md,mdx}");
dayjs.extend(localized);
---

<Layout title="Reid Fuhrman">
  <section class="posts">
    <h2 class="posts-header">Blog posts</h2>
    <ul>
      {
        posts.map((post) => {
          const { frontmatter } = post;
          const date = new Date(frontmatter.date);

          return (
            <li class="post-card">
              <article>
                <header>{dayjs(date).format("LL")}</header>
                {/* 
                <Image
                  class="post-image"
                  height={328}
                  width={766}
                  src={latteArt}
                  alt="coffee"
                /> */}

                <div class="post-body">
                  <a class="post-link" href={post.url}>
                    {frontmatter.title}
                  </a>
                </div>
              </article>
            </li>
          );
        })
      }
    </ul>

    <style>
      .posts {
        max-width: 768px;
      }

      .posts > ul {
        padding: 2em 0 5em 0;
        list-style-type: none;
        display: flex;
        flex-direction: column;
        gap: 2em;
      }

      .post-card {
        position: relative;
        border: 1.5px solid var(--deep-blue);
        transition: all 0.2s ease-in-out;
      }

      header {
        font-family: var(--mono-font);
      }

      header,
      .post-body {
        padding: 1.5em;
      }

      .post-image {
        height: 228px;
        width: 766px;
        background-color: black;
        object-fit: cover;
        border-top: 1.5px solid var(--deep-blue);
        border-bottom: 1.5px solid var(--deep-blue);
      }

      .post-link {
        font-size: var(--step-1);
        font-weight: bold;
      }

      .post-link::after {
        content: "";
        position: absolute;
        inset: 0;
      }

      .post-card:hover {
        transform: scale(1.025);
      }

      :global(.dark) .post-card {
        border: 1.5px solid var(--nice-beige);
      }

      :global(.dark) .post-image {
        border-top: 1.5px solid var(--nice-beige);
        border-bottom: 1.5px solid var(--nice-beige);
      }
    </style>
  </section></Layout
>
