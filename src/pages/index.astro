---
import Layout from "../layouts/Layout.astro";
import "@fontsource-variable/epilogue";
const posts = await Astro.glob("./posts/*.md");
const projects = await Astro.glob("./projects/*.md");
---

<Layout title="t3ma - SEO and DEV ">
  <section class="hero">
    <h1>Reid Fuhrman is a Front End Engineer</h1>
    <p>
      Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
      tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim
      veniam, quis nostrud.
    </p>
  </section>
</Layout>

<style>
  section {
    margin: 2rem 0;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
  }

  .post-item,
  .project-item,
  .experience-item {
    margin: 1.5rem 0;
  }

  .post-title,
  .project-title {
    font-size: 1.2rem;
    color: #fff;
    text-decoration: none;
    display: block;
    margin-bottom: 0.5rem;
  }

  .post-date,
  .project-date {
    font-size: 0.8rem;
    color: #666;
  }

  .experience-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .date {
    color: #666;
    font-size: 0.9rem;
  }

  h2 {
    font-size: 1.5rem;
    margin: 2rem 0 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .icon {
    font-size: 1.2rem;
  }
</style>
